@page "/fetchdata"

@using AreYouOk.Data
@using AreYouOk.Database.Models
@inject HealthService HealthService

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (health == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var healthEntry in health)
            {
                <tr>
                    <td>@healthEntry.Timestamp</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<HealthModel> health;

    protected override async Task OnInitializedAsync()
    {
        health = (await Task.FromResult(HealthService.GetHealth())).ToList();
    }
}
